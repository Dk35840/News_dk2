<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        ​
        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="205dp">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/main"
                    android:layout_height="100dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/mainauthor"
                android:hint="author"
                android:layout_height="50dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:layout_width="wrap_content"

                        android:id="@+id/sendd"
                        android:src="@drawable/ic_send_black_48dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_bookmark_black_48dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_done_black_48dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_favorite_black_48dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="101dp">



                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/imageid"
                    android:layout_height="wrap_content" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/second_main"
                android:hint="second msin"
                android:background="@android:color/holo_blue_dark" />


            </LinearLayout>
        </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>
</LinearLayout>